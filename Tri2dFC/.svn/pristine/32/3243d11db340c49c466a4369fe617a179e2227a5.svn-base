#include <math.h>
#include <iostream>
#include <stdlib.h>


// return standard gauss points and weights over [-1,1]

void gauss1d(const int& order,
	     double* g)
{
  if      (order == 0){
    g[0] = 0.0000000000000000; g[1] = 2.0000000000000000;
  }
  else if (order == 1){
    g[0] =-0.5773502691896257; g[1] = 1.0000000000000000;
    g[2] = 0.5773502691896257; g[3] = 1.0000000000000000;
  }
  else if (order == 2){
    g[0] =-0.7745966692414834; g[1] = 0.5555555555555556;
    g[2] = 0.0000000000000000; g[3] = 0.8888888888888888;
    g[4] = 0.7745966692414834; g[5] = 0.5555555555555556;
  }
  else if (order == 3){
    g[0] =-0.8611363115940526; g[1] = 0.3478548451374538;
    g[2] =-0.3399810435848563; g[3] = 0.6521451548625461;
    g[4] = 0.3399810435848563; g[5] = 0.6521451548625461;
    g[6] = 0.8611363115940526; g[7] = 0.3478548451374538;
  }
  else if (order == 4){
    g[0] =-0.9061798459386640; g[1] = 0.2369268850561891;
    g[2] =-0.5384693101056831; g[3] = 0.4786286704993665;
    g[4] = 0.0000000000000000; g[5] = 0.5688888888888889;
    g[6] = 0.5384693101056831; g[7] = 0.4786286704993665;
    g[8] = 0.9061798459386640; g[9] = 0.2369268850561891;
  }
  else if (order == 5){
    g[0] =-0.9324695142031521; g[1] = 0.1713244923791704;
    g[2] =-0.6612093864662645; g[3] = 0.3607615730481386;
    g[4] =-0.2386191860831969; g[5] = 0.4679139345726910;
    g[6] = 0.2386191860831969; g[7] = 0.4679139345726910;
    g[8] = 0.6612093864662645; g[9] = 0.3607615730481386;
    g[10] = 0.9324695142031521; g[11] = 0.1713244923791704;
  }
  else{
    std::cout << "\nPlease choose order 5 or lower." << std::endl;
    exit(0);
  }
}
